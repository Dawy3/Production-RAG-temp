# ===========================================================================
# RAG Knowledge Assistant â€” Environment Variables
# Copy this file to .env and fill in your values:  cp .env.example .env
# ===========================================================================

# ---- OpenAI / LLM --------------------------------------------------------
# Required: your OpenAI API key (also used for embeddings)
OPENAI_API_KEY=sk-...

# Model for chat/generation
LLM_MODEL=gpt-4o-mini

# Optional: point to a different OpenAI-compatible API
# Examples:
#   OpenRouter:  https://openrouter.ai/api/v1   (set LLM_MODEL=openai/gpt-4o-mini)
#   Ollama:      http://localhost:11434/v1       (set LLM_MODEL=llama3)
#   LM Studio:   http://localhost:1234/v1
# LLM_BASE_URL=

LLM_MAX_TOKENS=1024
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=60.0
LLM_MAX_RETRIES=3

# ---- Embeddings ----------------------------------------------------------
EMBEDDING_MODEL_NAME=text-embedding-3-small
EMBEDDING_MODEL_PROVIDER=openai
EMBEDDING_DIMENSIONS=1536
EMBEDDING_BATCH_SIZE=100
EMBEDDING_MAX_RETRIES=3

# ---- Qdrant ---------------------------------------------------------------
# Local:  http://localhost:6333
# Cloud:  https://xyz.cloud.qdrant.io
VECTOR_STORE=qdrant
QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=            # only needed for Qdrant Cloud
QDRANT_COLLECTION=documents

# =============================================================================
# POSTGRESQL
# =============================================================================
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/rag_db

# =============================================================================
# REDIS CACHE 
# =============================================================================
# Create redis DB first  :https://redis.io/docs/latest/operate/rc/rc-quickstart
REDIS_URL=redis://<username>:<password>@redis-12445.c15.us-east-1-2.ec2.cloud.redislabs.com:12445


# ---- Chunking -------------------------------------------------------------
CHUNK_STRATEGY=recursive
CHUNK_SIZE=512
CHUNK_OVERLAP=50
VECTOR_WEIGHT=5.0
BM25_WEIGHT=3.0
RECENCY_WEIGHT=0.2
# ---- Caching --------------------------------------------------------------
CACHE_EMBEDDING_ENABLED=true

# ---- Application ----------------------------------------------------------
APP_NAME=RAG Knowledge Assistant
APP_VERSION=1.0.0
APP_ENV=development
DEBUG=false

# ---- API Server -----------------------------------------------------------
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1
CORS_ORIGINS=*
